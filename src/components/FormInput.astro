---
const { label, name, id, autoComplete, type = "text" } = Astro.props;
---

<div class="flow" style="--flow-spacer: 0.5rem">
  <label for={id} class="flex-group label">
    {label}
    <span class="visually-hidden">required</span>
    <span class="required" aria-hidden="true">*</span>
  </label>
  <input
    type={type}
    name={name}
    id={id}
    autocomplete={autoComplete}
    aria-invalid="false"
    aria-describedby={`${id}-error`}
  />
  <p class="error hidden" id={`${id}-error`}></p>
</div>

<style lang="scss">
  @use "../styles/abstracts/" as *;

  input[type="text"],
  input[type="email"] {
    cursor: pointer;
    width: 100%;
    color: $form-input-color;
    font-family: $form-input-font-family;
    font-weight: $form-input-font-weight;
    font-size: $form-input-font-size;
    background-color: $form-input-background-color;
    border: 0;
    outline: $form-input-outline-default;
    padding: $form-input-padding;
    border-radius: $form-input-border-radius;

    &:hover,
    &:focus {
      outline: $form-input-outline-hover-focus;
    }

    &[aria-invalid="true"] {
      outline-color: $form-input-error-color;
    }
  }
</style>
